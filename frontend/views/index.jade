extends ./layout

block body
  div(ng-controller='AppCtrl')
      .container
          .jumbotron
              h2 {{name}}
              hr
              p Choose your input type: 
              div(ng-controller='inputChosenController')
                span
                  select.btn-primary(ng-model='optionSelected', ng-change='setValue(optionSelected); setLink(optionSelected.value)', data-ng-options='chooseOption as chooseOption.name for chooseOption in chooseOptions')
                  a.btn.btn-info(href='{{link}}', role='button') OK
              br            
              hr
              div(ng-view)

              div
                | This app is called :
                span(app-name)
              div
                | This app is running on {{osName}})

  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')